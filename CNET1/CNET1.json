{
  "openapi": "3.0.1",
  "info": {
    "title": "Demo Shop 1",
    "description": "Backend with ASP.NET 9 Core Web API",
    "version": "v1"
  },
  "paths": {
    "/product/create": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Create a new product",
        "description": "We need an object for creating",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateRequestDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateRequestDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateRequestDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/product/{sku}": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Get one product",
        "description": "We will get one product",
        "parameters": [
          {
            "name": "sku",
            "in": "path",
            "description": "SKU code product",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductCreateRequestDTO": {
        "required": [
          "sku",
          "name",
          "categoryId",
          "description",
          "unitPrice",
          "unitsInStock"
        ],
        "type": "object",
        "properties": {
          "sku": {
            "minLength": 4,
            "type": "string"
          },
          "name": {
            "maxLength": 500,
            "type": "string"
          },
          "categoryId": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "maxLength": 2000,
            "type": "string"
          },
          "unitPrice": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "unitsInStock": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "imageUrl": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Product"
    }
  ]
}